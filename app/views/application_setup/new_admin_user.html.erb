<p><%= simple_form_for @user, :url => url_for( :action => "create_admin_user", :controller => "application_setup"), :html => { :class => "form-horizontal" } do |f| %>
  <%= f.error_notification %>
  <%= f.input :login, :as => :hidden, :input_html => {:value => @user.login}%>
  <%= render :partial => "/users/profile_info", :locals => {:f => f} %>
  <%= f.input :email %>
  <%= f.button :wrapped, :cancel => root_path %>
<% end %>
</p>
