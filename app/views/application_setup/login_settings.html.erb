<%= f.input :auth_provider, :collection => ["CAS", "Devise"], :label => "Authorization Strategy", :required => :true, :include_blank => false  %>

<%= render :partial => "/app_configs/ldap_config", :locals => {:f => f} %>

<div class="form-actions">
<%= f.button :submit %></p>
</div>

<% end %>
